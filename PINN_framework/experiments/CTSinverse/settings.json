{
    "id": "001",
    "seed": 1234,
    "description": "CTS inverse problem of going from spectra to parameters",

    "io": {
        "base_dir": "/home/antj/PINNs/PINN_framework/experiments/CTSinverse",
        "figure_dir": "/home/antj/PINNs/PINN_framework/experiments/CTSinverse/figures",
        "model_dir": "/home/antj/PINNs/PINN_framework/experiments/CTSinverse/models",
        "log_dir": "/home/antj/PINNs/PINN_framework/experiments/CTSinverse/logs",
        "data_dir": "/home/antj/PINNs/PINN_framework/data/CTS/scanem_list"
    },
    
    "verbosity": {
        "init": true,
        "data": true,
        "training": true,
        "evaluation": true
    },

    "run": {
        "data_dir": "run0",
        "truncate_spectra_to": 1000,
        "beam_overlap": 20,
        "input_power": 500000, 
        "train": {
            "iterations": 50000,
            "optimizer": "adam",
            "loss_fn": "mse",
            "validation_metric": "mse",
            "update_scheme": "unweighted",
            "update_kwargs": {
                "unweighted": {
                    "normalized": true
                }
            },
            "learning_rate": 1e-3,
            "train_validation_split": 0.9,
            "batch_size": -1,
            "decay_rate": 0.95,
            "decay_steps": 2000,
            "transfer_learning": false,
            "checkpoint_every": 5000,
            "early_stop_vars": {
                "patience": 1000,
                "min_delta": 0.001
            },
            "jitted_update": true
        },
        "eval": {}
    },

    "model": {
        "nn": {
            "network": [
                {
                    "architecture": "mlp",
                    "specifications": {
                        "input_dim": 1000,
                        "output_dim": 9,
                        "hidden_dims": [64, 64, 64, 64],
                        "activation": "tanh",
                        "initialization": "glorot_normal"                    
                    }
                }
            ]
        }
    },

    "plotting": {
        "results": {
            "do_plots": false,
            "file_extension": "png"
        },
        "dpi": 100,
        "grid": 151
    },

    "logging": {
        "do_logging": true,
        "log_every": 1,
        "print_every": 1000
    }
}